    }

    .sidebar-menu {
        list-style-type: none;
        padding: 10px;
        margin: 0;
    }

    .sidebar-menu li {
        margin-bottom: 20px;
    }

    .sidebar-menu a {
        color: #fff;
        text-decoration: none;
        font-size: 18px;
        display: block;
        padding: 10px;
        transition: background-color 0.3s; /* Added transition for smooth hover effect */
    }

    .sidebar-menu a:hover {
        background-color: #444;
        border-radius: 4px;
    }

    /* Main content styling */
    .main-content {
      
        flex-grow: 1;
    }

    h1 {
        font-size: 1.75rem;
        margin-bottom: 20px;
    }

    /* Ensure the container doesn't add additional padding */
    .container-fluid {
        padding-left: 0;
        padding-right: 0;
    }

    /* Flexbox layout for rows */
    .row {
        display: flex;
        flex-wrap: nowrap; /* Ensure content stays in a row layout */
        padding: 0; /* Reset padding */
    }

    /* Adjust sidebar and content for better layout */
    .col-md-3,
    .col-lg-2 {
        padding: 0;
    }

    .col-md-9,
    .col-lg-10 {
        padding-bottom:20px;
        padding: 0 240px; /* Provide padding to the content area */
        margin-bottom: auto;
        margin-top: 20px;
}
    }

